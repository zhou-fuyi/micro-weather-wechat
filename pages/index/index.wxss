/* other start */

scroll-view {
  background-color: white;
}

.bo-other-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: white;
  color: black;
  justify-content: space-between;
  font-size: 28rpx;
}

.bo-other-container .description {
  /* margin-top: 25rpx; */
  padding: 0 5%;
  display: flex;
  align-items: center;
  height: 110rpx;
}

.line {
  width: 100%;
  height: 2rpx;
  padding: 0;
  /* margin-top: 18rpx; */
  background: rgb(219, 219, 219);
}

.hour_forecast {
  width: 100%;
  height: 33%;
  margin: 20rpx auto 0;
}

