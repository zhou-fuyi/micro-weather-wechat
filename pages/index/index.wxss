ec-canvas {
  width: 100%;
  height: 100%;
  position: relative;
}

.day_forecast {
    display: flex;
    flex-direction: column;
}

.day_forecast .option {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 30rpx;
    height: 70rpx;
    border-bottom: rgb(219, 219, 219) solid 1rpx;
}

.day_forecast .option view {
    display: flex;
    align-items: baseline;
}

.day_forecast .option .last {
    font-size: 30rpx;
}

.day_forecast .day text, .day_forecast .night text {
    margin-left: 9rpx;
}