ec-canvas {
  width: 100%;
  height: 100%;
  position: relative;
  top: 20rpx;
}

.day_forecast {
  display: flex;
  flex-direction: column;
  margin-top: 36rpx;
}

.day_forecast .title {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  font-family: "monospace";
  color: rgb(72, 72, 72);
}

.day_forecast .option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 30rpx;
  height: 70rpx;
  border-bottom: rgb(219, 219, 219) solid 1rpx;
}

.day_forecast .option view {
  display: flex;
  align-items: baseline;
}

.day_forecast .option .last {
  font-size: 30rpx;
}

.day_forecast .day text,
.day_forecast .night text {
  margin-left: 9rpx;
}

.footer-container {
  margin-top: auto;
  justify-self: flex-end;
}

.footer {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}

.footer_links {
  color: rgb(97, 106, 139);
}

.footer_text {
  color: rgb(111, 111, 111);
}