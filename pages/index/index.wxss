.footer-container {
  margin-top: auto;
  justify-self: flex-end;
}

.footer {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}

.footer_links {
  color: rgb(97, 106, 139);
}

.footer_text {
  color: rgb(111, 111, 111);
}